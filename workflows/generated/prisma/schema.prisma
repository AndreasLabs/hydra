// Shared Prisma schema with common datasource configuration
// This defines the database connection used by all projects

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../hydra-hub/generated/prisma"
}

generator py {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
  interface            = "sync"
  output               = "../workflows/generated/prisma"
}

enum StorageType {
  OBJECT
  TABLE
}

model DataAsset {
  id               String      @id @default(uuid())
  path             String
  storage_type     StorageType
  storage_location String
  asset_type       String
  date_created     DateTime    @default(now())
  date_updated     DateTime    @updatedAt
  owner_uuid       String

  @@map("data_asset")
}
